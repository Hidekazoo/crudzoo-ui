{
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": true,
    "target": "es6",
    "lib": [
      "es6",
      "dom",
      "dom.iterable",
      "es2016.array.include",
      "es2017.object",
      "es2017.intl",
      "esnext.intl"
    ],
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "stories"]
}
